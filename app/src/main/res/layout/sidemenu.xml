<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sidemenu_bg_color"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/sidemenu_backbtn"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="35px">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/sidemenu_backbtn_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                app:lottie_fileName="menuIcon.json" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="6sp"
                android:text="N-Interaction"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sidemenu_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="네이버 인터랙티브 스튜디오 어플리케이션입니다. 서비스 이용시 불편하신 내용이 있으시면 sungin.hong@navercorp.com 으로 연락부탁드립니다."
                android:textColor="#ccffffff"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>