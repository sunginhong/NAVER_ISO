<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_cardView"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="-15dp"
    android:clipChildren="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="12dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/rv_mainRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/rv_mainVideoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:alpha="1"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:soundEffectsEnabled="false" />

            <View
                android:id="@+id/rv_mainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:alpha="0" />

        </RelativeLayout>

        <!--<View-->
        <!--android:id="@+id/rv_shadow"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_above="@+id/rv_mainLL"-->
        <!--android:alpha=".5"-->
        <!--android:background="@drawable/bg_black_gradient" />-->

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.55"
            android:background="@drawable/bg_black_gradient_maincard" />

        <LinearLayout
            android:id="@+id/rv_mainLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical">

            <View
                android:id="@+id/rv_mainCaseLineView"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha="0.2"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="18dp">

                <TextView
                    android:id="@+id/rv_mainTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="title_"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/card_titleColor"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/rv_mainSubTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="5sp"
                    android:maxLines="2"
                    android:text="subtitle"
                    android:textAlignment="viewStart"
                    android:textColor="@color/card_subtitleColor"
                    android:textSize="14sp"
                    android:typeface="normal" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>