<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_cardView"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="0dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:transitionName="@string/transition_maincard"
    android:translationY="0dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/rv_mainRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardBgColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/rv_mainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:alpha="1" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/rv_mainImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:alpha="@string/maincard_alpha"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:transitionName="@string/transition_maincard_image" />

        <LinearLayout
            android:id="@+id/rv_mainLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:alpha="1"
            android:clipChildren="true"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rv_mainLL_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/rv_mainTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="4dp"
                            android:alpha="1"
                            android:shadowColor="#33000000"
                            android:shadowDy="4"
                            android:shadowRadius="12"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/card_titleColor"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/rv_mainSubTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="24sp"
                            android:text="subtitle"
                            android:textAlignment="viewStart"
                            android:textColor="@color/card_subtitleColor"
                            android:textSize="14sp"
                            android:typeface="normal" />

                        <View
                            android:id="@+id/rv_mainCaseLineView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@color/white" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.2"
                    android:background="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>