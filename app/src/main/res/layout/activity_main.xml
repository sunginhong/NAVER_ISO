<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBgColor">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/main_nestedscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:clickable="true"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:background="@color/mainPagerBgColor">

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="375dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/mainPagerBgColor">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="0dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="19dp"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="0dp"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:lineSpacingExtra="8sp"
                                        android:shadowColor="#33000000"
                                        android:shadowDy="0"
                                        android:shadowRadius="0"
                                        android:text="ISO WORKS."
                                        android:textAllCaps="false"
                                        android:textColor="#FF0055F8"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:lineSpacingExtra="8sp"
                                        android:shadowColor="#33000000"
                                        android:shadowDy="4"
                                        android:shadowRadius="12"
                                        android:text="Recent"
                                        android:textAllCaps="false"
                                        android:textColor="#000000"
                                        android:textSize="28sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <com.example.naver.naver_iso.ViewPagerNoSwipe
                                    android:id="@+id/mainvp_pager"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true" />
                            </LinearLayout>

                            <include
                                layout="@layout/activity_main_pager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:lineSpacingExtra="8sp"
                            android:shadowColor="#33000000"
                            android:shadowDy="4"
                            android:shadowRadius="12"
                            android:text="Contents"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/main_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:paddingBottom="25dp" />

                        <include
                            layout="@layout/recyclerview_footer"
                            android:layout_gravity="bottom" />

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/main_appbar_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-56dp">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/main_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipChildren="true"
                android:gravity="top">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleGravity="center_vertical"
                    app:expandedTitleMarginBottom="0dp"
                    app:expandedTitleMarginEnd="64dp"
                    app:expandedTitleMarginStart="30dp"
                    app:expandedTitleMarginTop="0dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/detailHeaderColor"
                        app:titleMarginStart="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RelativeLayout>
                    </android.support.v7.widget.Toolbar>

                    <RelativeLayout
                        android:id="@+id/motion_toolbar_rl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/detailHeaderColor"
                        android:gravity="center_vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:inputType="textMultiLine"
                                android:singleLine="true"
                                android:text="ISO WORKS."
                                android:textAlignment="textStart"
                                android:textColor="@color/detailHeaderTitleColor"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-1dp"
                            android:layout_weight="1"
                            android:alpha="0.1"
                            android:background="@color/black" />

                    </RelativeLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>
        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

    <com.example.naver.naver_iso.ViewMainCustom
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="false"/>


</FrameLayout>